<div class="page-header">
  <%= link_to schools_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_school_path(@school), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show school</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @school.name %></dd>

  <dt>Website:</dt>
  <dd><%= @school.website %></dd>

  <dt>Contact name:</dt>
  <dd><%= @school.contact_name %></dd>

  <dt>City:</dt>
  <dd><%= @school.city %></dd>

  <dt>State:</dt>
  <dd><%= @school.state %></dd>

  <dt>Description:</dt>
  <dd><%= @school.description %></dd>

</dl>
